<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.me.ntnu.cadcamtrashcreatorcatcher.MainActivity"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="60%"
        app:layout_marginTopPercent="5%"
        app:layout_marginRightPercent="5%"

        android:id="@+id/flayout_cam"
        >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/list_tasktimer"
        android:name="com.project.me.ntnu.cadcamtrashcreatorcatcher.UI.TaketaskFragment"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|center"
        android:layout_marginEnd="15dp"

        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        app:layout_heightPercent="90%"
        app:layout_widthPercent="35%" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|bottom"

        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="60%"
        android:weightSum="48"

        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_runnninghour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="7"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txt_runnningmin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="7"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txt_runningsec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="7"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text="/"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="6"
            />
        <EditText
            android:id="@+id/txt_limithour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:inputType="number"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/txt_limitmin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="7"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/txt_limitsec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="7"
            />
    </LinearLayout>

</android.support.percent.PercentFrameLayout>
